<div class="bg-gray border pt60 pb45">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h2 class="title dark mb25">
                    About the <span class="light highlight dark">GPU Day</span>
                </h2>

                {% if Model.ContentItem.AboutGPUDayPart.LeadText.Value != null %}
                <p class="lead smaller">{{ Model.ContentItem.AboutGPUDayPart.LeadText.Value }}</p>
                {% endif %}

                {% if Model.ContentItem.AboutGPUDayPart.About.Value != null %}
                {{ Model.ContentItem.AboutGPUDayPart.About.Value }}
                {% endif %}

                {% if Model.ContentItem.AboutGPUDayPart.BulletPoints.Value != null %}
                <p>
                    <ul class="fa-ul">
                        {{ Model.ContentItem.AboutGPUDayPart.BulletPoints.Value }}
                    </ul>
                </p>
                {% endif %}

                <div class="mb5"></div>
            </div>
            
            {% if Model.ContentItem.AboutGPUDayPart.EmbeddedVideoURL.Value != null %}
            <div class="col-sm-6">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="{{ Model.ContentItem.AboutGPUDayPart.EmbeddedVideoURL.Value }}" width="500" height="281" allowfullscreen=""></iframe>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>
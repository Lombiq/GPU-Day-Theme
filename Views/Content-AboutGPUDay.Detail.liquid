<div class="bg-gray border pt60 pb45">
    <div class="container">
        <div class="row">
            <h2 class="title dark mb25">
                About the <span class="light highlight dark">GPU Day</span>
            </h2>

            {% if Model.ContentItem.AboutGPUDayPart.EmbeddedVideoURL.Value == null or if Model.ContentItem.AboutGPUDayPart.PromotionImage.FirstMediaUrl == null %}
            <div class="col-sm-12">
                {% if Model.ContentItem.AboutGPUDayPart.About.Value != null %}
                {{ Model.ContentItem.AboutGPUDayPart.About.Value }}
                {% endif %}
                <div class="mb5"></div>
            </div>
            {% else %}
            {% if Model.ContentItem.AboutGPUDayPart.EmbeddedVideoURL.Value != null %}
            <div class="col-sm-6">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="{{ Model.ContentItem.AboutGPUDayPart.EmbeddedVideoURL.Value }}" width="500" height="281" allowfullscreen=""></iframe>
                </div>
            </div>
            {% endif %}

            {% if Model.ContentItem.AboutGPUDayPart.PromotionImage.FirstMediaUrl != null %}
            <div class="col-sm-6">
                <div class="embed-responsive embed-responsive-16by9">
                    <img class="embed-responsive-item" src="{{ Model.ContentItem.AboutGPUDayPart.PromotionImage.FirstMediaUrl }}" width="500" height="281" />
                </div>
            </div>
            {% endif %}
            {% endif %}
        </div>
    </div>
</div>
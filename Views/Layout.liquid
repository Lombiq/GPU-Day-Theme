{% Style "https://fonts.googleapis.com/css?family=Montserrat:400,700%7COpen+Sans:300,300i,400,400i,600,600i,700,800" %}
{% StyleRequire "FontAwesome" %}
{% ScriptRequire "jQuery" %}

{% if Model.WorkContext.CurrentSite.BaseUrl == "https://gpuday.com" %}
    {% Style "//dotneststatic.com/media/gpuday/MediaTheme/Styles/plugins.min.css" %}
    {% Style "//dotneststatic.com/media/gpuday/MediaTheme/Styles/style.min.css" %}
    {% Style "//dotneststatic.com/media/gpuday/MediaTheme/Styles/index-event.min.css" %}
    {% Script "//dotneststatic.com/media/gpuday/MediaTheme/Scripts/plugins.min.js" %}
    {% Script "//dotneststatic.com/media/gpuday/MediaTheme/Scripts/main.min.js" %}
{% else %}
    {% Style "../Styles/plugins.min.css" %}
    {% Style "../Styles/style.min.css" %}
    {% Style "../Styles/index-event.min.css" %}
    {% Script "../Scripts/plugins.min.js" %}
    {% Script "../Scripts/main.min.js" %}
{% endif %}

<div id="page">
    <div id="main">
        <div id="content-wrapper">
            <div id="content">
                {{ Model.Content | Display }}
            </div>
        </div>
    </div>
    <div id="footer-wrapper">
        <footer>
            {{ Model.Footer | Display }}
        </footer>
    </div>
</div>